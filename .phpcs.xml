<?xml version="1.0"?>
<ruleset name="Hookly Webhook Automator">
    <description>Coding standards for Hookly - Webhook Automator</description>

    <!-- What to scan -->
    <file>./src</file>
    <file>./includes</file>
    <file>./wp-webhook-automator.php</file>
    <file>./uninstall.php</file>

    <!-- Exclude patterns -->
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/node_modules/*</exclude-pattern>
    <exclude-pattern>/tests/*</exclude-pattern>
    <exclude-pattern>/build/*</exclude-pattern>

    <!-- How to scan -->
    <arg name="extensions" value="php"/>
    <arg name="colors"/>
    <arg value="sp"/>

    <!-- PHP version -->
    <config name="testVersion" value="8.0-"/>

    <!-- WordPress Coding Standards -->
    <rule ref="WordPress">
        <!-- Allow PSR-4 class file naming -->
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
        <!-- Allow short array syntax -->
        <exclude name="Universal.Arrays.DisallowShortArraySyntax"/>
        <!-- Allow camelCase (PSR-4 modern PHP style) -->
        <exclude name="WordPress.NamingConventions.ValidVariableName"/>
        <exclude name="WordPress.NamingConventions.ValidFunctionName"/>
        <!-- Allow short ternary -->
        <exclude name="Universal.Operators.DisallowShortTernary"/>
        <!-- Allow direct database queries (needed for custom tables) -->
        <exclude name="WordPress.DB.DirectDatabaseQuery"/>
        <!-- Yoda conditions not required -->
        <exclude name="WordPress.PHP.YodaConditions"/>
        <!-- Doc comments - relaxed for PSR-4 style -->
        <exclude name="Squiz.Commenting.ClassComment.Missing"/>
        <exclude name="Squiz.Commenting.FileComment.MissingPackageTag"/>
        <exclude name="Generic.Commenting.DocComment.MissingShort"/>
        <exclude name="Squiz.Commenting.InlineComment.InvalidEndChar"/>
        <exclude name="Squiz.Commenting.FunctionComment.Missing"/>
        <!-- Allow empty catch statements -->
        <exclude name="Generic.CodeAnalysis.EmptyStatement.DetectedCatch"/>
        <!-- Allow dynamic text in translations (handled at runtime) -->
        <exclude name="WordPress.WP.I18n.NonSingularStringLiteralText"/>
        <!-- Allow reserved keyword as param name -->
        <exclude name="Universal.NamingConventions.NoReservedKeywordParameterNames"/>
    </rule>

    <!-- Verify text domain -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="hookly-webhook-automator"/>
            </property>
        </properties>
    </rule>

    <!-- Allow . in hook names -->
    <rule ref="WordPress.NamingConventions.ValidHookName">
        <properties>
            <property name="additionalWordDelimiters" value="."/>
        </properties>
    </rule>
</ruleset>
